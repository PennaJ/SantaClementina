        </section>
        <section class="categories-section">
            <article id="relojes">
                <h3>Relojes</h3>
            </article>
            <article id="pulseras">
                <h3>Pulseras</h3>
            </article>
            <article id="anillos">
                <h3>Anillos</h3>
            </article>
            <article id="cinturones">
                <h3>Cinturones</h3>
            </article>
            <article id="collares">
                <h3>Collares</h3>
            </article>
            <article id="corbatas">
                <h3>Corbatas</h3>
            </article>
